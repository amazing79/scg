{
    "name": "amazing79/scgbackend",
    "type": "project",
    "description": "Sistema de control de gastos.",
    "keywords": ["framework", "Slim", "gastos", "backend", "api"],
    "require": {
        "php": "^8.0",
        "slim/slim": "4.*",
        "slim/psr7": "^1.7",
        "vlucas/phpdotenv": "^5.6",
        "ext-pdo": "*",
        "php-di/php-di": "^7.0"
    },
    "autoload":{
        "psr-4":{
            "App\\": "src"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5"
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests"
        }
    },

    "scripts": {
        "start": "php -S localhost:8080 -t public",
        "test": "phpunit"
    }
}
